#!/bin/sh

__dirname=$(dirname "$(readlink -f "$0")")
source "$(readlink -f "$__dirname/../shared.sh")"

if [ $# = "0" ]; then
  printf 'usage: ew rust <PROJECTNAME>\n'
  exit 1
fi

# Create base project
cargo init "$@"
ew project-base "$1"

# Copy files
pushd "$1"
copy "$__dirname/rustfmt.toml" rustfmt.toml
popd
